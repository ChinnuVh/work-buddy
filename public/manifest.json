{
  "manifest_version": 3,
  "name": "Work Buddy",
  "version": "1.0",
  "permissions": ["alarms", "notifications", "storage"],
  "host_permissions": [
    "https://api.openweathermap.org/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "/src/pages/popup.html",
     "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  },
  "web_accessible_resources": [{
  "resources": [""],
  "matches": ["<all_urls>"]
}]
}
